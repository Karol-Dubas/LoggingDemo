{
  "AllowedHosts": "*",
  "Serilog": {
    // Like namespace using in C#
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      // Sinks:
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log-file.log",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] {Message}{NewLine:1}{Exception:1}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log-file.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "shared": true
        }
      }
    ]
  }
}
