{
  "AllowedHosts": "*",
  "Serilog": {
    // Like namespace using in C#
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      // Sinks:
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Temp\\log-file.log",
          "outputTemplate": "test {Timestamp:G} {Message}{NewLine:1}{Exception:1}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Temp\\log-file.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "shared": true
        }
      }
    ]
  }
}
